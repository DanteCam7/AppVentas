<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".DetallesProducto">

    <!-- TODO: Update blank fragment layout -->
    <ProgressBar
        android:id="@+id/cargaDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_slider"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/comagrilogo" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:text="@string/hello_blank_fragment"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Ultima Compra"
            android:textAlignment="center"
            android:textColor="#AC55D1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/establecerPeecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Establecer precio"
            android:textAlignment="center"
            android:textColor="#AC55D1"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sinHistorialActivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="No hay historial de precios"
            android:textAlignment="center"
            android:textColor="#AC55D1"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Costo"
            android:textAlignment="center"
            android:textColor="#AC55D1"
            android:textSize="18sp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ivaTxt"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IVA"
                android:textAlignment="center"
                android:textColor="@color/verdeSec"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/iva2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:height="48dp"
                android:ems="1"
                android:inputType="numberDecimal"
                android:text="0"
                tools:layout_height="48dp" />

            <TextView
                android:id="@+id/iepsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IEPS"
                android:textAlignment="center"
                android:textColor="@color/verdeSec"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ieps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="1"
                android:inputType="numberDecimal"
                android:text="0"
                tools:layout_height="48dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cantidadTxt"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cantidad"
                android:textAlignment="center"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="1"
                android:inputType="numberDecimal"
                android:text="0"
                android:textAlignment="center"
                tools:layout_height="48dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="5"
                android:gravity="top"
                android:hint="Observacion de Detalle"
                android:inputType="textMultiLine"
                android:minHeight="100dp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/agregar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#323232"
            android:minHeight="50dp"
            android:src="@drawable/addcar" />

    </LinearLayout>

</FrameLayout>